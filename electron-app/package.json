{
  "name": "llmctl-desktop",
  "version": "2.2.0",
  "description": "LLM Control System Desktop Application",
  "main": "dist/main/main.js",
  "homepage": "./",
  "author": "Liu Yifan",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-rebuild -f -w node-pty",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:preload": "webpack --config webpack.preload.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "electron": "chcp 65001 && electron .",
    "electron:dev": "electron . --inspect=5858",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "electron-builder --win",
    "dist:win:portable": "electron-builder --win --config.win.target=zip",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "rebuild": "electron-rebuild -f -w node-pty"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "css-loader": "^6.8.1",
    "dotenv": "^17.2.3",
    "electron": "^26.6.10",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "node-loader": "^2.1.0",
    "sharp": "^0.34.4",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.2.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@reduxjs/toolkit": "^1.9.7",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "antd": "^5.10.0",
    "antd-img-crop": "^4.27.0",
    "axios": "^1.5.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "i18next": "^25.5.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.0.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.16.0",
    "recharts": "^3.2.1"
  },
  "build": {
    "appId": "com.llmctl.desktop",
    "productName": "LLMctl",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "3202336152",
        "repo": "llmctl-desktop"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon-1024.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon-1024.png"
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon-1024.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3202336152/llmctl-desktop.git"
  }
}
